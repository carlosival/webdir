{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Responsables</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ entity.nombre }}</td>
            </tr>
            <tr>
                <th>Cargo</th>
                <td>{{ entity.cargo }}</td>
            </tr>
            <tr>
                <th>Ci</th>
                <td>{{ entity.ci }}</td>
            </tr>
            <tr>
                <th>Nocontrato</th>
                <td>{{ entity.nocontrato }}</td>
            </tr>
            <tr>
                <th>Fechainicio</th>
                <td>{{ entity.fechainicio|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Fechavencimiento</th>
                <td>{{ entity.fechavencimiento|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Tiporesponsable</th>
                <td>{{ entity.tiporesponsable }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('responsable') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('responsable_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
