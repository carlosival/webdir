{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Responsables list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Cargo</th>
                <th>Ci</th>
               {# <th>Nocontrato</th>
                <th>Fechainicio</th>
                <th>Fechavencimiento</th>#}
                <th>Tiporesponsable</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('responsable_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.nombre }}</td>
                <td>{{ entity.cargo }}</td>
                <td>{{ entity.ci }}</td>{#
                <td>{{ entity.nocontrato }}</td>
                <td>{% if entity.fechainicio %}{{ entity.fechainicio|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.fechavencimiento %}{{ entity.fechavencimiento|date('Y-m-d H:i:s') }}{% endif %}</td>#}
                <td>{{ entity.tiporesponsable }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('responsable_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('responsable_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('responsable_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
