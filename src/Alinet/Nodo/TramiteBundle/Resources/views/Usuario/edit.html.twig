{% extends '::base4.html.twig' %}

{% block body %}
<div class="col-md-offset-2 col-md-8">
    <h1>Editar Usuario</h1>

<ul class="record_actions  pull-right">
    <li>
        <a href="{{ path('usuario') }}">
            Ver Todos
        </a>
    </li>
    <li>

       {{ form_start(delete_form) }}
        {{ form_errors(delete_form) }}


        <div>
            {{ form_widget(delete_form) }}
        </div>

        {{ form_end(delete_form) }}


    </li>
</ul>

  {{ form_start(edit_form, {'role': 'form'}) }}
    {{ form_errors(edit_form) }}
  <div class="form-group">
        {{ form_label(edit_form.correo) }}
        {{ form_errors(edit_form.correo) }}
        {{ form_widget(edit_form.correo,{ 'attr': {'class': 'form-control','type':'email','placeholder':'example@alinet.cu'}    }) }}
    </div>

    <div class="form-group">
        {{ form_label(edit_form.nombre) }}
        {{ form_errors(edit_form.nombre) }}
        {{ form_widget(edit_form.nombre,{ 'attr': {'class': 'form-control','placeholder':'Nombre'} }) }}
    </div>

    <div class="form-group">
        {{ form_label(edit_form.password) }}
        {{ form_errors(edit_form.password) }}
        {{ form_widget(edit_form.password,{ 'attr': {'class': 'form-control' ,'type':'password','placeholder':'Contrase√±a'} }) }}
    </div>

    <div class="form-group">
        {{ form_label(edit_form.rol) }}
        {{ form_errors(edit_form.rol) }}
        {{ form_widget(edit_form.rol,{ 'attr': {'class': 'form-control'} }) }}
    </div>


    {{ form_widget(edit_form.submit,{ 'attr': {'class': 'btn btn-default','label': 'Aceptar'} }) }}



</div>

{% endblock %}
