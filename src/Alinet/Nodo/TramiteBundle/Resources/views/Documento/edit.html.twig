{% extends '::base4.html.twig' %}

{% block body %}
<div class="col-md-offset-2 col-md-8">
    <h1>Editar Documento</h1>

    <ul class="record_actions pull-right">
        <li>
            <a href="{{ path('documento') }}">
                Ver Todos
            </a>
        </li>
        <li>{{ form(delete_form) }}</li>
    </ul>
    {{ form_start(edit_form) }}
    {{ form_errors(edit_form) }}

    <div class="form-group">
        {{ form_label(edit_form.file) }}
        {{ form_errors(edit_form.file) }}
        {{ form_widget(edit_form.file) }}
    </div>

    <div class="form-group">
        {{ form_label(edit_form.tramite) }}
        {{ form_errors(edit_form.tramite) }}
        {{ form_widget(edit_form.tramite,{ 'attr': {'class': 'form-control'} }) }}
    </div>

    {{ form_widget(edit_form.submit,{ 'attr': {'class':'btn btn-default','label': 'Aceptar','value':'Aceptar'} }) }}

    {{ form_end(edit_form) }}


</div>
{% endblock %}
